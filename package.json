{
  "name": "argos-saleslogix",
  "version": "4.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Saleslogix/argos-saleslogix"
  },
  "watch": {
    "lint": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "js",
        "jsx"
      ]
    },
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "js",
        "jsx"
      ]
    }
  },
  "scripts": {
    "test": "npm run build && grunt test",
    "testbasic": "grunt test:basic",
    "less": "grunt less",
    "start": "webpack-dev-server --env=dev --config webpack.config.js",
    "server": "node scripts/server.js",
    "build": "build:dev",
    "build:dev": "webpack --env=dev --progress --profile --colors",
    "build:dist": "webpack --env=prod --progress --profile --colors",
    "lint": "eslint ./src",
    "lint-fix": "eslint --fix ./src",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015-without-strict": "^0.0.4",
    "dojo-webpack-loader": "^0.9.2",
    "eslint": "^3.6.1",
    "eslint-plugin-react": "^6.9.0",
    "grunt": "^1.0.1",
    "grunt-argos-deps": "git+https://git@github.com/Saleslogix/grunt-argos-deps.git#v0.1.4",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-jasmine": "^1.0.3",
    "grunt-contrib-less": "^1.0.1",
    "grunt-manifest": "^0.4.0",
    "grunt-shell": "^2.0.0",
    "grunt-template-jasmine-istanbul": "^0.5.0",
    "h2o2": "^5.4.0",
    "hapi": "^15.1.1",
    "inert": "^4.0.2",
    "npm-watch": "^0.1.6",
    "spdy": "^3.4.4",
    "webpack": "beta",
    "webpack-dev-server": "beta",
    "webpack-merge": "^2.4.0"
  },
  "dependencies": {
    "moment": "^2.17.1",
    "pouchdb-browser": "^6.1.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.2.0",
    "rxjs": "^5.0.3"
  }
}
